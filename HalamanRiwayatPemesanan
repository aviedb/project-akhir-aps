class HalamanRiwayatPemesanan
  Declarations
    RiwayatController controller
    Pesanan pesanan

  void setController(RiwayatController controller)
  begin
    this.controller = controller
  end

  void melihatSemuaRiwayatPemesanan()
  begin
    this.controller.melihatSemuaRiwayatPemesanan()
  end

  void melihatRiwayatPemesanan(int pesanan_id)
  begin
    this.controller.melihatPesanan(pesanan_id)
  end

  void tampilkanRiwayatPemesanan(Pesanan pesanan)
  begin
    render pesanan
  end

  void tampilPesanError()
  begin
    show error message
  end
